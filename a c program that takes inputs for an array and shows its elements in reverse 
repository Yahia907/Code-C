    #include<stdio.h>
    #include<stdlib.h>
    int main ()
    {
    int n,i,arr[20];
    printf("\n enter the number of the array's elements:");
    scanf("%d",&n);
    printf ("\n enter the elements the array :");
    for(i=0;i<n;i++)
    {
    
    scanf("%d",&arr[i]);
    }
    printf("\n the array's elements in reverse are  :");
    
    for(i=n-1;i>=0;i--)
    {
    printf("\t %d ",arr[i]);
    
    }
    return 0;
    }